{% set topline = topline ?? block.topline ?? null %}
{% set headline = headline ?? block.headline ?? null %}
{% set headlineSize = headlineSize ?? block.headlineSize ?? null %}
{% set hasBackground = hasBackground ?? block.hasBackground ?? null %}

<section class="pt-14 md:pt-28 {{ hasBackground ? 'bg-two' }}">
    <div class="container">
        <div class="{{ headlineSize == 'large' ? 'max-w-xl' : 'max-w-sm' }}">
            {% if topline %}
                <span class="topline dark">{{ topline }}</span>
            {% endif %}
            <h2 class="headline {{ headlineSize }}">
                {{ headline }}
            </h2>
        </div>
    </div>
</section>
